<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blank.dao.OrderSettingDao">
    <!--根据日期查询-->
    <select id="findCountByOrderDate" resultType="long" parameterType="java.util.Date">
        select count(*) from t_ordersetting where orderDate = #{orderDate}
    </select>
    <!--新增预约-->
    <insert id="add" parameterType="com.blank.pojo.OrderSetting">
        insert into t_ordersetting(orderDate,number,reservations) values
        (#{orderDate},#{number},#{reservations})
    </insert>
    <!--根据日期更新预约数-->
    <update id="editNumberByOrderDate" parameterType="com.blank.pojo.OrderSetting">
        update t_ordersetting set number = #{number} where orderDate = #{orderDate}
    </update>
    <!--根据月份查询预约设置信息-->
    <select id="getOrderSettingByMonth" parameterType="hashmap" resultType="com.blank.pojo.OrderSetting">
         select * from t_ordersetting where orderDate between #{dateBegin} and #{dateEnd}
    </select>
</mapper>